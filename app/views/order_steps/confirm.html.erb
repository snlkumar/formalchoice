 <div class="stepwizard">
	<div class="stepwizard-row setup-panel">
		<div class="stepwizard-step">
			<a href="#step-1" type="button" class="btn btn-default btn-circle"  disabled="disabled">1</a>
			<p>Custom Design</p>
		</div>
		<div class="stepwizard-step">
			<a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
			<p>Measurement</p>
		</div>
		<div class="stepwizard-step">
			<a href="#step-3" type="button" class="btn-u btn-circle">3</a>
			<p>Preview</p>
		</div>
	</div>
</div>
<%= form_for @order_item, url: wizard_path, html: {class: "sky-form" } do |f| %>	
	<header>Desgin</header>
	<fieldset>
		<%= render "#{f.object.product.category.name}_preview", f: f %>
	</fieldset>
	<header>Measurement </header>
	<fieldset>

		<%if f.object.measurement.measurement_type == 'tailor'%>
			<%= render "tailor_request_preview", m: f.object.measurement %>
		<%else%>
			<%= render "#{f.object.product.category.name}_measurement_preview", m: f.object.measurement %>
		<% end %>
	</fieldset>
	<p><button class="btn-u nextBtn pull-right" type="submit" >Checkout</button></p>
	<p><%= link_to "Back", previous_wizard_path, class: "btn-u nextBtn pull-left" %></p>
<% end %>
<style type="text/css">

.stepwizard-row {
		display: table-row;
}
.stepwizard {
		display: table;
		width: 100%;
		position: relative;
}
.stepwizard-step button[disabled] {
		opacity: 1 !important;
		filter: alpha(opacity=100) !important;
}
.stepwizard-row:before {
		top: 14px;
		bottom: 0;
		position: absolute;
		content: " ";
		width: 100%;
		height: 1px;
		background-color: #ccc;
		z-order: 0;
}
.stepwizard-step {
		display: table-cell;
		text-align: center;
		position: relative;
}
.btn-circle {
		width: 30px;
		height: 30px;
		text-align: center;
		padding: 6px 0;
		font-size: 12px;
		line-height: 1.428571429;
		border-radius: 15px !important;
}

