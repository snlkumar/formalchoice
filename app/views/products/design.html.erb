<div class="breadcrumbs">
		<div class="container">
				<h1 class="pull-left">Breadcrumbs</h1>       
		</div>
</div>
<%= form_for @order_item do |f|%>
	<%= render "#{@order_item.current_step}_step", f: f%>
	<% f.submit "Continue", class: "btn-u nextBtn pull-right" %>
	<p><button class="btn-u nextBtn pull-right" type="submit" >Next</button></p>
  	<p><%= f.submit "Back", :name => "back_button", :class => "btn-u nextBtn pull-left" unless @order_item.first_step? %></p>
<% end %>
	
