<% session[:order]%>
<div id="sky-form" class="sky-form">
    <header>Checkout form</header>
    <fieldset>
        <table class="table table-bordered stripe">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th class="hidden-sm">price</th>
                    <th>Quantity</th>
                    <th>Sub Total</th>
                </tr>
            </thead>
            <tbody>
                <%@order.order_items.each_with_index do |order_item, i|%>
                	<tr>
                        <td><%=i%></td>
                		<td><%=image_tag(order_item.product.images.first.avatar_url(:design_thumb))%><%=order_item.product.name%></td>
                		<td><%=order_item.product.back_price%></td>
                		<td><%=order_item.quantity%></td>
                		<td><%=order_item.product.back_price %></td>
                		
                	</tr>
                <% end %>
            </tbody>
        </table>
    </fieldset>
</div>
    <%= form_for @order, html: {class: "sky-form"} do |f|%>
        <%= @order.errors.count%>
        <%if @order.errors.any?%>
            <%@order.errors.each do |e|%>
                <%=e%>
            <%end %>
        <% end %>
        <%=f.fields_for :shipping_address do |s|%>
            <fieldset>
        <div class="row">
            <section class="col col-6">
                <label class="input">
                    <%=s.text_field :first_name,placeholder: "First Name"%>
                    <!-- <input type="email" name="email" placeholder="First Name"> -->
                </label>
            </section>
            <section class="col col-6">
                <label class="input">
                    <%=s.text_field :last_name, placeholder: "Last Name"%>
                    <!-- <input type="tel" name="phone" placeholder="Last Name"> -->
                </label>
            </section>
        </div>
         <div class="row">
            <section class="col col-6">
                <label class="input">
                    <%=s.email_field :email, placeholder: "E-mail"%>
                    <!-- <input type="email" name="email" placeholder="E-mail"> -->
                </label>
            </section>
            <section class="col col-6">
                <label class="input">
                    <%=s.text_field :state,placeholder: "State"%>
                    <!-- <input type="tel" name="phone" placeholder="Phone"> -->
                </label>
            </section>
        </div>
    <!-- </fieldset>
    <fieldset> -->
        <div class="row">
            <section class="col col-4">
                <label class="input">
                    <%=s.text_field :city, placeholder: "City"%>
                    <!-- <input type="email" name="email" placeholder="State"> -->
                </label>
            </section>
            <section class="col col-4">
                <label class="input">
                    <%=s.text_field :pincode, placeholder: "Pincode"%>
                    <!-- <input type="tel" name="phone" placeholder="City"> -->
                </label>
            </section>
            <!-- <section class="col col-4">
                <label class="input">
                    <%=%>
                    <input type="tel" name="phone" placeholder="Pincode">
                </label>
            </section> -->
       </div>
    </fieldset>
        <% end %>
        <footer>
        <%= f.submit%>
        <!-- <button type="submit" class="btn-u">Continue</button> -->
    </footer>
    <%end%>