<!DOCTYPE html>
<html>
<head>
  <title>Formalchoice</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application'%>
 <title>jQuery UI Datepicker - Select a Date Range</title>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>  
  
  <%= csrf_meta_tags %>
</head>
<body>	
	<header id="header">
		<hgroup>
			<h1 class="site_title"><a href="index.html">FormalChoice</a></h1>
			<h2 class="section_title"></h2>
			<div class="btn_view_site">
				<% if user_signed_in? %>				  	
				  	<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
				<% else %>
				  	<%= link_to('Login', sellers_sign_in_path)  %>
				<% end %>
			</div>
		</hgroup>
	</header> <!-- end of header bar -->
	
	<section id="secondary_bar">
		<div class="user">
			<p>John Doe (<a href="#">3 Messages</a>)</p>
			<!-- <a class="logout_user" href="#" title="Logout">Logout</a> -->
		</div>
	</section><!-- end of secondary bar -->
	<%= render "layouts/admin_sidebar"%>	
	<section id="main" class="column">
		<%if flash[:notice]%>
			<h4 class="alert_success"><%=flash[:notice]%></h4>
		<% end %>
		<%if flash[:error]%>
			<h4 class="alert_error"><%=flash[:error]%></h4>
		<% end %>
		<%= yield %>
		
	</section>


</body>

</html>