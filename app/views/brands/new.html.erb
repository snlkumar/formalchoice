
<article class="module width_full">
	<% @brand.errors.full_messages.each do |e|%>
		<%=e%>
	<% end unless @brand.errors.blank?%>
	<div class="breadcrumbs_container">
		<article class="breadcrumbs"><%= link_to "Brand Listing", admin_brands_path(current_user.admin)%>
			<div class="breadcrumb_divider"></div>
			 <a class="current">New</a>
		</article>
	</div>
	<header></header>
	<%= form_for [current_user.admin,@brand] do |f|%>		
		<div class="module_content post_message form_submit">	
				<div class="left-col">			
					<label>Name</label>
					<%=f.text_field :name%>	
				</div>	
				<div class="right-col">				
					<label>Code</label>
					<%=f.text_field :code%>
				</div>
				
				<div class="left-col">			
					<label>Address</label>
					<%=f.text_field :address%>
				</div>
				<div class="right-col">
					<label>Contact</label>
					<%=f.text_field :contact%>
				</div>
				<div class="left-col">		
					<label>Dealin</label>
					<%=f.text_field :dealin%>
				</div>
				<div class="right-col">
					<label>Description</label>
					<%=f.text_field :description%>				
				</div>
				<div class="left-col">			
					<label>Founder</label>
					<%=f.text_field :founder%>
				</div>
				<div class="right-col">
					<label>Is Active</label>
					<%=f.select :isactive, [[true,true],[false,false]]%>				
				</div>
		</div>
		
			<div class="submit_link">
				<%=f.submit "Create", class:  "submit_btn"%>
				<!-- <input type="submit" value="Create" class="alt_btn">
				<input type="submit" value="Reset"> -->
			</div>
		
    <% end %>
	
</article>